<Window x:Class="MagicStickUI.CustomMessageBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MagicStickUI"
        mc:Ignorable="d"
        Title="Message" MinHeight="150" MinWidth="150" WindowStartupLocation="CenterScreen" SizeToContent="WidthAndHeight" ResizeMode="NoResize">
    <Grid>
        <TextBlock Name="txtMessage" TextWrapping="Wrap" Margin="10,10,10,40" VerticalAlignment="Top" />
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,10">
            <Button Name="btnOK" Content="OK" Width="75" Margin="5" Click="btnOK_Click"/>
            <Button Name="btnCancel" Content="Cancel" Width="75" Margin="5" Click="btnCancel_Click"/>
            <Button Name="btnCustom" Content="Custom" MinWidth="75" Margin="5" Padding="10,0" Click="btnCustom_Click"/>
        </StackPanel>
    </Grid>
</Window>